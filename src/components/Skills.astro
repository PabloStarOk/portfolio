---
import SkillCard from "@/components/skills/SkillCard.astro";
import AstroIcon from "@/icons/skills/AstroIcon.svg";
import CsharpIcon from "@/icons/skills/CsharpIcon.svg";
import CssIcon from "@/icons/skills/CssIcon.svg";
import DotnetIcon from "@/icons/skills/DotnetIcon.svg";
import FigmaIcon from "@/icons/skills/FigmaIcon.svg";
import HtmlIcon from "@/icons/skills/HtmlIcon.svg";
import JavascriptIcon from "@/icons/skills/JavascriptIcon.svg";
import MysqlIcon from "@/icons/skills/MysqlIcon.svg";
import TypescriptIcon from "@/icons/skills/TypescriptIcon.svg";
import SectionLayout from "@/layouts/SectionLayout.astro";
---

<SectionLayout id="skills" title="Habilidades">
  <div class="skill-cards-container">
    <SkillCard
      title=".NET"
      level={2}
      iconSrc={DotnetIcon}
      iconAlt="Logo de .NET"
      type="framework"
    />
    <SkillCard
      title="Astro"
      level={1}
      iconSrc={AstroIcon}
      iconAlt="Logo de Astro framework"
      type="framework"
    />
    <SkillCard
      title="C#"
      level={2}
      iconSrc={CsharpIcon}
      iconAlt="Logo de CSharp"
      type="lang"
    />
    <SkillCard
      title="JavaScript"
      level={1}
      iconSrc={JavascriptIcon}
      iconAlt="Logo de JavaScript"
      type="lang"
    />
    <SkillCard
      title="TypeScript"
      level={1}
      iconSrc={TypescriptIcon}
      iconAlt="Logo de JavaScript"
      type="lang"
    />
    <SkillCard
      title="HTML"
      level={1}
      iconSrc={HtmlIcon}
      iconAlt="Logo de HTML"
      type="lang"
    />
    <SkillCard
      title="CSS"
      level={1}
      iconSrc={CssIcon}
      iconAlt="Logo de CSS"
      type="lang"
    />
    <SkillCard
      title="MySQL"
      level={2}
      iconSrc={MysqlIcon}
      iconAlt="Logo de MySQL"
      type="db"
    />
    <SkillCard
      title="Figma"
      level={2}
      iconSrc={FigmaIcon}
      iconAlt="Logo de Figma"
      type="tool"
    />
  </div>
</SectionLayout>

<style>
  .skill-cards-container {
    align-self: stretch;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: var(--space-400);
  }

  @media (min-width: 768px) {
    .skill-cards-container {
      gap: var(--space-1200);
    }
  }
</style>
