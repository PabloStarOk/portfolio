---
import SkillCard from "@/components/skills/SkillCard.astro";
import DotnetIcon from "@/icons/skills/DotnetIcon.svg";
import SectionLayout from "@/layouts/SectionLayout.astro";
---

<SectionLayout id="skills" title="Habilidades">
  <div class="skill-cards-container">
    <SkillCard
      title=".NET"
      level={2}
      iconSrc={DotnetIcon}
      iconAlt="Logo de .NET"
    />
  </div>
</SectionLayout>

<style>
  .skill-cards-container {
    align-self: stretch;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: var(--space-400);
  }

  @media (min-width: 768px) {
    .skill-cards-container {
      gap: var(--space-1200);
    }
  }
</style>
