---
import Picture from "astro/components/Picture.astro";
import BogotaImage from "public/Bogota.webp";
---

<div class="city-picture">
  <Picture
    class="city-picture__img"
    src={BogotaImage}
    alt="Imagén panorámica de Bogotá"
  />
</div>

<style>
  .city-picture {
    /* Layout */
    display: flex;

    align-self: stretch;
    padding: var(--space-800);
    align-items: center;
    justify-content: center;
    box-sizing: border-box;

    /* Style */
    border-radius: var(--radius-100);
    border: 1px solid var(--color-border-default-default);
    background: var(--background-color);
    box-shadow: var(--size-depth-0) var(--size-depth-200) var(--size-depth-400)
      var(--size-depth-negative-200) var(--color-black-300);
  }

  .city-picture__img {
    /* Layout */
    width: 100%;
    height: 100%;
    object-fit: cover;

    /* Style */
    border-radius: var(--radius-100);
  }
</style>
