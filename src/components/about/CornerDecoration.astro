---
interface Props {
  position: "left-bottom" | "right-top";
  style?: string;
  rotationDegrees?: number;
}

const {
  position,
  style = "fill: url(#brandGradient)",
  rotationDegrees = 0,
} = Astro.props;
---

<svg
  class=`corner-decoration corner-decoration--${position}`
  xmlns="http://www.w3.org/2000/svg"
  width="100"
  height="101"
  viewBox="0 0 100 101"
  fill="none"
  style={`transform: rotate(${rotationDegrees}deg);`}
>
  <path
    d="M0 .857h100v100s-12.938-45.938-33.5-66.5C45.938 13.795 0 .857 0 .857Z"
    style={style}
  >
  </path>
</svg>

<style>
  .corner-decoration {
    position: absolute;
  }

  .corner-decoration--right-top {
    top: -1px;
    right: -1px;
  }

  .corner-decoration--left-bottom {
    bottom: -1px;
    left: -1px;
  }
</style>
