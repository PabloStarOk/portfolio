---
interface Props {
  style?: string;
  rotationDegrees?: number;
}

const { style = "fill: url(#brandGradient)", rotationDegrees = 0 } =
  Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width="100"
  height="101"
  viewBox="0 0 100 101"
  fill="none"
  style={`transform: rotate(${rotationDegrees}deg);`}
>
  <path
    d="M0 .857h100v100s-12.938-45.938-33.5-66.5C45.938 13.795 0 .857 0 .857Z"
    style={style}
  >
  </path>
</svg>
