---
import Arrow from "@/icons/component-icons/Arrow.astro";
import { Image } from "astro:assets";
import ProjectTechBadge from "./ProjectTechBadge.astro";

interface Props {
  name: string;
  description: string;
  stackBadges: StackBadge[];
  href: string;
  thumbnailSrc: ImageMetadata;
  thumbnailAlt: string;
}

type StackBadge = {
  label: string;
  iconSrc: ImageMetadata;
};

const { name, description, stackBadges, href, thumbnailSrc, thumbnailAlt } =
  Astro.props;
---

<a class="project-card" href={href} rel="noopener" aria-label=`${name} project`>
  <header class="project-card__header">
    <div class="project-card__text">
      <Arrow style="fill: url(#brandGradient);" />
      <h3
        class="project-card__title"
        transition:name={`title-${name}-transition`}
      >
        {name}
      </h3>
      <p class="project-card__description">{description}</p>
    </div>

    <ul class="project-card__stack">
      {
        stackBadges.map((badge) => (
          <li>
            <ProjectTechBadge iconSrc={badge.iconSrc} label={badge.label} />
          </li>
        ))
      }
    </ul>
  </header>

  <div class="project-card__thumbnail-container">
    <Image
      src={thumbnailSrc}
      alt={thumbnailAlt}
      class="project-card__thumbnail"
      loading="lazy"
      transition:name={`img-${name}-transition`}
    />
  </div>
</a>

<style>
  .project-card {
    /* Layout */
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: stretch;
    overflow: hidden;

    /* Style */
    border: 1px solid var(--color-border-default-default);
    border-radius: var(--radius-200);
    box-shadow: var(--size-depth-0) var(--size-depth-400) var(--size-depth-400)
      var(--size-depth-negative-200) var(--color-black-200);
    text-decoration: none;

    /* Animations */
    transition: transform 0.3s ease-in-out;
  }

  .project-card__header {
    /* Layout */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-600);
    align-self: stretch;
    padding: var(--space-600) var(--space-400);

    /* Style */
    background: var(--background-color);
    border-bottom: 1px solid var(--color-border-default-default);
  }

  .project-card__text {
    /* Layout */
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-200);
  }

  .project-card__stack {
    /* Layout */
    list-style: none;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    gap: var(--space-300);
    align-self: stretch;
    flex-wrap: wrap;
  }

  .project-card__title {
    /* Typography */
    font-size: var(--heading-size-base);
    font-style: normal;
    font-weight: var(--typography-heading-font-weight);
    line-height: 120%;
    letter-spacing: -0.03rem;
    max-width: 100%;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;

    /* Style */
    background: var(--primary-color-1000);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .project-card__description {
    /* Layout */
    align-self: stretch;

    /* Style */
    text-align: center;
    color: var(--color-text-default-default);
    font-size: var(--body-size-medium);
    font-style: normal;
    font-weight: var(--body-font-weight-regular);
    line-height: 140%;
  }

  .project-card__thumbnail-container {
    /* Layout */
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    align-self: stretch;
    padding: var(--space-600);
    position: relative;

    /* Style */
    background: var(--color-background-default-secondary);
  }

  .project-card__thumbnail {
    /* Layout */
    width: 100%;
    height: auto;
    object-fit: contain;
    transform: scale(0.95);

    /* Animations */
    transition: transform 0.3s ease-in-out;
  }

  .project-card:hover,
  .project-card:focus-visible {
    transform: scale(1.02);
  }

  .project-card:hover .project-card__thumbnail,
  .project-card:focus-visible .project-card__thumbnail {
    transform: scale(1);
  }

  .project-card:focus-visible {
    outline-offset: 1rem;
    outline: var(--space-100) solid var(--right-color-1000);
    outline-width: 0.188rem;
    outline-offset: var(--space-100);
    border-radius: var(--radius-200);
  }

  /* Overlay effect */
  .project-card__thumbnail-container::after {
    /* Layout */
    content: "";
    position: absolute;
    width: 100%;
    height: 50%;
    left: 0;
    right: 0;
    bottom: 0;

    /* Style */
    opacity: 0;
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0),
      var(--left-color-100)
    );

    /* Animations */
    transition: opacity 0.3s ease-in-out;
  }

  .project-card:hover .project-card__thumbnail-container::after,
  .project-card:focus-visible .project-card__thumbnail-container::after {
    /* Style */
    opacity: 1;
  }

  @media screen and (min-width: 46.5em) {
    .project-card {
      /* Layout */
      flex-direction: row;
      height: 20rem;
    }

    .project-card__header {
      /* Layout */
      gap: var(--space-800);
      padding: var(--space-600);
      flex: 1 0 0;

      /* Style */
      border-right: 1px solid var(--color-border-default-default);
      border-bottom: none;
    }

    .project-card__thumbnail-container {
      width: 50%;
    }
  }

  @media screen and (min-width: 64em) {
    .project-card {
      /* Layout */
      height: 24.375rem;
    }

    .project-card__header {
      /* Layout */
      padding: var(--space-800);
      flex: 1 0 0;
      max-width: 23.75rem;
    }

    .project-card__thumbnail-container {
      flex: 1 0 0;
    }

    .project-card__thumbnail {
      /* Layout */
      transform: scale(0.9);
    }
  }
</style>
