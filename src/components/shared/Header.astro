---
import Menu from "@/components/shared/header/Menu.astro";
import ThemeToggle from "@/components/shared/themes/ThemeToggle.astro";
import FavIcon from "@/icons/FavIcon.astro";
import MenuIcon from "@/icons/Menu.astro";
import "@/styles/global.css";
import IconButton from "@/components/shared/buttons/IconButton.astro";
import MenuLinks from "@/components/shared/header/MenuLinks.astro";
import BackButton from "@/components/shared/header/BackButton.astro";

interface Props {
  displayNavLinks?: boolean;
  displayThemeToggle?: boolean;
  displayBackButton?: boolean;
}

const {
  displayNavLinks = true,
  displayThemeToggle = true,
  displayBackButton = false,
} = Astro.props;
---

<header class="nav-bar">
  <FavIcon class="header__icon" style="fill: url(#brandGradient);" size="42" />
  {displayNavLinks && <MenuLinks targetDevice="desktop" />}
  {displayThemeToggle && <ThemeToggle targetDevice="desktop" />}
  <!-- Menu button to open the menu in mobile and tablet-->
  {
    displayNavLinks && (
      <IconButton
        id="openMenuButton"
        buttonType="tertiary"
        ariaLabel="Navigation Menu"
        targetDevice="mobile"
      >
        <MenuIcon style="stroke: url(#brandGradient);" />
      </IconButton>
    )
  }
  {displayBackButton && <BackButton />}
</header>
<Menu id="navMenu" />

<style is:inline>
  .nav-bar {
    background: var(--primary-color-100);

    position: sticky;
    top: var(--space-200);
    border-radius: var(--radius-100);

    overflow: hidden;

    width: 87.5%;
    max-width: 62.5rem;
    max-height: 4rem;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;

    z-index: 999;
    backdrop-filter: blur(0.938rem);
    padding: var(--space-300) var(--space-600);
  }

  .header__icon {
    /* Layout */
    min-width: var(--size-icon-large);
    width: var(--size-icon-large);
    max-width: var(--size-icon-large);
    height: auto;
    max-height: var(--size-icon-large);
  }

  .nav-bar::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

    /* Solid gradient border */
    border: 1px solid transparent;
    background: var(--primary-color-1000);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: exclude;
    -webkit-mask-composite: destination-out;

    /* Ensures the pseudo-element matches the border-radius */
    border-radius: inherit;
    z-index: 0; /* Places the pseudo-element behind the content */
    pointer-events: none;
  }

  @media screen and (max-width: 26.563em) {
    .nav-bar {
      padding: var(--space-200) var(--space-300);
      max-height: 3.125rem;
    }
  }

  @media screen (max-width: 48em) {
    .nav-bar {
      padding: var(--space-300);
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const openMenuButton = document.getElementById(
      "openMenuButton"
    ) as HTMLButtonElement;
    const navMenu = document.getElementById("navMenu") as HTMLElement;

    function openMenu() {
      navMenu.dataset.visible = "true";
      navMenu.style.visibility = "visible";
      document.body.style.overflow = "hidden";
    }

    if (openMenuButton) openMenuButton.addEventListener("click", openMenu);
  });
</script>
