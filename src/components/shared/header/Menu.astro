---
import ThemeToggle from "@/components/shared/themes/ThemeToggle.astro";
import CloseIcon from "@lucide/astro/icons/x";
import "@/styles/global.css";
import IconButton from "@/components/shared/buttons/IconButton.astro";
import MenuLinks from "@/components/shared/header/MenuLinks.astro";

interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div id={id} class="menu" data-visible="false">
  <div class="menu__buttons">
    <ThemeToggle />
    <IconButton
      id="menuCloseButton"
      ariaLabel="Close Menu"
      buttonType="tertiary"
    >
      <CloseIcon size={40} style="stroke: url(#brandGradient)" />
    </IconButton>
  </div>
  <MenuLinks targetDevice="mobile" />
</div>

<style is:inline>
  .menu {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;

    position: fixed;
    top: 0;
    right: -100%;
    height: 100dvh;
    width: 100vw;

    box-shadow: -4px 0px 10px rgba(0, 0, 0, 0.25);
    padding-top: var(--space-600);
    background-color: var(--color-background-default-primary-500);
    backdrop-filter: blur(1rem);

    z-index: 1000;

    transition:
      transform 0.3s ease-in-out,
      box-shadow 0.3s ease-in-out;
  }

  .menu[data-visible="false"] {
    box-shadow: none;
    visibility: hidden;
  }

  .menu[data-visible="true"] {
    transform: translateX(-100%);
  }

  .menu__buttons {
    width: 100%;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;

    padding: 0 var(--space-600);
  }

  @media screen and (min-width: 48em) {
    .menu {
      width: 50vw;
      right: -50%;

      border-style: none none none solid;
      border-width: 1px;
      border-image: var(--color-primary-vertical-1000) 1;
    }
  }

  @media screen and (min-width: 64em) {
    .menu {
      display: none;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    let menuHideTimeout: NodeJS.Timeout;

    function findMenuElement(event: Event): HTMLDivElement {
      const targetElement = event.target as HTMLElement;
      return targetElement.closest(".menu") as HTMLDivElement;
    }

    function hideMenu(menuElement: HTMLDivElement) {
      if (menuHideTimeout) clearTimeout(menuHideTimeout);
      menuHideTimeout = setTimeout(() => {
        menuElement.style.visibility = "hidden";
      }, 300);
    }

    function closeMenu(event: Event) {
      const menuElement = findMenuElement(event);
      if (menuElement) {
        menuElement.dataset.visible = "false";
        document.body.style.overflow = "visible";
        hideMenu(menuElement);
      }
    }

    const closeButton = document.getElementById(
      "menuCloseButton"
    ) as HTMLButtonElement;
    const sectionLinksCollection = document.getElementsByClassName(
      "menu-links__link"
    ) as HTMLCollectionOf<HTMLAnchorElement>;

    closeButton.addEventListener("click", closeMenu);
    const sectionLinks = [...sectionLinksCollection];

    sectionLinks.forEach((link: HTMLAnchorElement) =>
      link.addEventListener("click", closeMenu)
    );
  });
</script>
