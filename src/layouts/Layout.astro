---
import SvgDefs from "@/components/defs/SvgDefs.astro";
import Header from "@/components/Header.astro";
import ThemeManager from "@/components/themes/ThemeManager.astro";
import Montserrat from "@fontsource-variable/montserrat/files/montserrat-latin-wght-normal.woff2?url";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={Montserrat}
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Pedro Pablo Rodriguez</title>
    <SvgDefs />

    <ThemeManager defaultTheme="auto" />
    <ViewTransitions />
  </head>
  <body>
    <Header hamburgerMenuName="nav-bar__hamburger-menu" />
    <slot />
  </body><style is:global>
    html,
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
      height: 100%;
      padding-top: var(--space-100);
      scroll-behavior: smooth;
      box-sizing: border-box;
    }

    .nav-bar__hamburger-menu {
      display: initial;
      visibility: visible;
    }

    @media screen and (min-width: 1024px) {
      .nav-bar__hamburger-menu {
        display: none;
        visibility: hidden;
      }
    }
  </style>
</html>
