---
import SvgDefs from "@/components/defs/SvgDefs.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import ThemeManager from "@/components/themes/ThemeManager.astro";
import Montserrat from "@fontsource-variable/montserrat/files/montserrat-latin-wght-normal.woff2?url";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={Montserrat}
      crossorigin="anonymous"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Pedro Pablo Rodriguez</title>
    <SvgDefs />

    <ThemeManager defaultTheme="auto" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body><style is:global>
    html,
    body {
      margin: 0;
      padding: 0;
      width: 100%;
      scroll-behavior: smooth;
      box-sizing: border-box;
    }

    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      gap: var(--space-200);
    }

    main {
      display: flex;
      flex-direction: column;
      width: 87.5%;
      max-width: 62.5rem;
      gap: var(--space-2400);
      padding: var(--space-800) 0;
    }
  </style>
</html>
