---
interface Props {
  id: string;
  title?: string;
}

const { id, title } = Astro.props;
---

<section id={id} class="section-layout">
  {title && <h1 class="section-layout__title">{title}</h1>}
  <slot />
</section>

<style>
  .section-layout {
    width: 100%;
    min-height: 34.75rem;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    gap: 4rem;
  }
</style>
